<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.miPerfil.MiPerfilFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/btnSalir"
            android:background="@drawable/icon_logout_chat"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/editarimagen"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="116dp"
            android:background="@drawable/borde"
            tools:src="@tools:sample/avatars" />


        <TextView
            android:id="@+id/editarnombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editarimagen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Nombre y Apellido"
            android:textSize="15dp" />



        <Button
            android:id="@+id/btneditarimagenperfil"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:layout_below="@+id/editarnombre"
            android:layout_marginTop="20dp"
            android:text="Cambiar" />



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>